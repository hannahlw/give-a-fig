<div class="restaurant">
<div class="container">
<div id="bs-carousel-1" class="carousel slide" data-ride="carousel" data-interval="5000" data-pause="hover" data-wrap="true">
<div class="carousel-inner">
</div>
</div>
</div>
</div>

<div class="block-heading-two text-center">
<h3>
<span>Find a Recipe for Your Ingredients</span>
</h3>
</div>
<%= form_tag("/recipes", method: "get") do %>
<%= label_tag :ingredients, "Add Ingredients" %>
<%= text_field_tag "ingredients[]" %>
<%= text_field_tag "ingredients[]" %>
<%= text_field_tag "ingredients[]" %>
<%= submit_tag("Find Recipes") %>
<% end %>

<% if @recipe_info != nil %>
  <% @recipe_info.each do |recipe_hash| %>
      <h3> Name: <%= recipe_hash[:name] %></h3>
      <% recipe_hash[:ingredient].each do |ing| %>
      <ul>
      <p><%= ing %></p>
      </ul>
    <% end %>
    <%= image_tag "#{recipe_hash[:image]}", :style => "width: 20%; height: 300%;" %>
    <div>
    <%= recipe_hash[:link] %>
    </div>
  <% end %>
<% end %>

